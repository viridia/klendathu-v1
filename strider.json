{
  "runner": {
    "id": "simple-runner",
  },
  "merge_plugins": true,
  "plugins": [
    {
      "id": "node",
      "enabled": false,
      "showStatus": true,
      "config": {
        "test": "npm run test-server",
        "caching": "none",
        "runtime": "whatever",
        "fork": ""
      }
    },
    {
      "id": "custom",
      "enabled": true,
      "config": {
        "shell": "bash",
        "prepare": "yarn install",
        "test": "mocha server/**/*tests.js"
      }
    }
  ]
}
